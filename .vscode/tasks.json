{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "isShellCommand": true,
  "args": [],
  "showOutput": "always",
  "problemMatcher": {
    "owner": "cpp",
    "fileLocation": ["relative", "${workspaceRoot}"],
    "pattern": {
      "regexp": "^(.*):(\\d+):\\s+(.*)$",
      "file": 1,
      "line": 2,
      "message": 3
    }
  },
  "tasks": [
    {
      "taskName": "make",
      "command": "make",
      "isBuildCommand": true,
      "args" : []
    },
    {
      "taskName": "clean",
      "command": "make",
      "args" :[
        "clean"
      ]
    }
  ]
}
